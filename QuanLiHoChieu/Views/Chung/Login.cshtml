@model QuanLiHoChieu.Models.ViewModels.LoginVM

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập hệ thống</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/Login.css">
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="card-header">
                <h1 class="title">ĐĂNG NHẬP HỆ THỐNG</h1>
            </div>

            <div class="card-body">
                <form asp-action="Login" asp-controller="Chung" id="loginForm" method="post">
                    <div class="form-group">
                        <label for="username">Tên đăng nhập</label>
                        <div class="input-group">
                            <i class="fas fa-user"></i>
                            <input asp-for="Username" type="text" id="username" name="username" placeholder="Nhập tên đăng nhập" required>
                        </div>
                        <span class="error-message" id="username-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="password">Mật khẩu</label>
                        <div class="input-group">
                            <i class="fas fa-lock"></i>
                            <input asp-for="Password" type="password" id="password" name="password" placeholder="Nhập mật khẩu" required>
                            <i class="fas fa-eye toggle-password" id="togglePassword"></i>
                        </div>
                        <span class="error-message" id="password-error"></span>
                    </div>

                    <div class="options">
                        <label class="remember-me">
                            <input type="checkbox" name="remember"> Ghi nhớ đăng nhập
                        </label>
                        <a href="@Url.Action("Forget", "Chung")" class="forgot-password">Quên mật khẩu?</a>
                    </div>

                    <button type="submit" class="login-btn">
                        <i class="fas fa-sign-in-alt"></i> ĐĂNG NHẬP
                    </button>
                </form>
            </div>
        </div>
    </div>

    @* Sẽ thông báo lỗi hoặc thông báo thành công *@
    @if (ViewBag.AlertMessage != null)
    {
        <script>
            alert(@Html.Raw(Json.Serialize(ViewBag.AlertMessage)));
        </script>
    }
    <script src="~/js/script.js"></script>
</body>
</html>